<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>

        <item name="android:windowTitleStyle">@style/MyDialogTitleStyle</item>

        <item name="android:buttonBarPositiveButtonStyle">@style/MyDialogButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/MyDialogButtonStyle</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/MyDialogButtonStyle</item>
    </style>

    <style name="MyDialogTitleStyle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyDialogButtonStyle" parent="@android:style/Widget.Material.Button.Borderless.Colored">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>