<resources>
    <style name="MyAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">#222222</item>
        <item name="android:windowTitleStyle">@style/MyDialogTitleStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/MyDialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/MyDialogButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/MyDialogButtonStyle</item>
    </style>

    <style name="MyDialogTitleStyle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
