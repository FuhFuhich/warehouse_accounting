<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchPushNotifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Push-уведомления"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchEmailNotifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email-уведомления"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/switchPushNotifications"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchLowStockNotifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Уведомления о низком остатке"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/switchEmailNotifications"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тёмная тема"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/switchLowStockNotifications"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"/>

    <TextView
        android:id="@+id/textViewVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Версия: 1.0.0"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
